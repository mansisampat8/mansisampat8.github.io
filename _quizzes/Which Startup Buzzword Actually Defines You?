    .quiz-title{font-size:1.05rem;color:var(--muted);margin-left:6px;font-weight:700}
    .intro-copy{background:var(--card);padding:18px;border-radius:var(--round);box-shadow:var(--shadow);margin-bottom:18px;font-size:1.02rem;line-height:1.45}
    .card{background:var(--card);border-radius:var(--round);box-shadow:var(--shadow);padding:26px;margin-bottom:18px;overflow:hidden}
    .progress-wrap{display:flex;align-items:center;gap:12px;margin-bottom:14px}
    .progress-bar{flex:1;height:10px;background:#f0f3f8;border-radius:999px;overflow:hidden}
    .progress-fill{height:100%;width:0%;background:linear-gradient(90deg,#ffd37a, #0680d6);transition:width .35s ease}
    .progress-text{font-size:0.9rem;color:var(--muted);width:90px;text-align:right}
    .q-number{font-size:.9rem;color:#9aa3b2;font-weight:700;margin-bottom:8px}
    .q-text{font-size:1.15rem;line-height:1.35;margin-bottom:14px;font-weight:700}
    .options{display:grid;grid-template-columns:1fr;gap:10px}
    .opt{display:block;border-radius:12px;padding:12px 14px;text-align:left;background:#fbfbfe;border:1px solid #eef2f7;cursor:pointer;transition:transform .12s ease, box-shadow .12s ease;font-weight:700}
    .opt small{display:block;font-weight:400;color:var(--muted);font-size:.9rem;margin-top:4px}
    .opt:hover{transform:translateY(-3px);box-shadow:0 10px 30px rgba(12,20,40,0.06)}
